<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	@if (Session["EIC"] == null)
	{
		var controllerName = HttpContext.Current.Request.RequestContext.RouteData.Values["Controller"].ToString();
		if (controllerName != "Home")
		{
			<meta http-equiv="refresh" content="7; URL='@Url.Action("Index", "Home")'" />	
		}
	}
    <title>@ViewBag.Title - HRISv2 Leave Administration</title>
	@Styles.Render("~/bundles/vendorCSS")
    @*@Styles.Render("~/Content/css")*@

    @Scripts.Render("~/bundles/vendorJS")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("e-Leave", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                    <li>@Html.ActionLink("myLeave", "MyLeave", "LeaveVersion2")</li>
                    @*<li>@Html.ActionLink("Create", "CreateRequest", "Leave")</li>*@
                    <li>@Html.ActionLink("Recommend", "Recommend", "LeaveVersion2")</li>
                    <li>@Html.ActionLink("Posting", "Posting", "LeaveVersion2")</li>
                    <li>@Html.ActionLink("Approve", "Approve", "LeaveVersion2")</li>
                    <li>@Html.ActionLink("Reports", "Reports", "LeaveVersion2")</li>
                    <li>@Html.ActionLink("Utility", "Utility", "LeaveVersion2")</li>
                    <li>@Html.ActionLink("Settings", "Settings", "LeaveVersion2")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content" style="padding-top: 55px;">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year e-Leave Administration</p>
        </footer>
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
